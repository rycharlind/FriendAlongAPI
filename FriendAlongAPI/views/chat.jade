				+messageTableRow('http://k2.okccdn.com/php/load_okc_image.php/images/60x60/60x60/0x0/960x960/2/5704777011920203695.webp?v=2', 'Hey! Hows it going?')
				+messageTableRow('http://k3.okccdn.com/php/load_okc_image.php/images/120x120/120x120/0x0/0x0/2/8195838067050674575.webp?v=2', 'Good!  What are you up to tonight?')
				+messageTableRow('http://k2.okccdn.com/php/load_okc_image.php/images/60x60/60x60/0x0/960x960/2/5704777011920203695.webp?v=2', 'Not too much.  Just hanging out.')
												
mixin chatTableRow(pic, name, message)
	tr
		td
			div.row
				div.col-md-3
					img(src=pic)
				div.col-md-9
					div
						strong=name
					div=message
					
mixin messageTableRow(pic, message)
	tr
		td
			div.row
				div.col-md-2
					img(src=pic, style='width:50px;height:50px;border-radius:10px')
				div.col-md-10
					div.row.pull-left
						div.col-md-12
							div=message
					div.row.pull-right
						div.col-md-12
							div
								span Sent on Monday
				