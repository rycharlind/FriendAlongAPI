extends layout

block content
	.col-md-6.col-md-offset-3
		form.form(action="login",method="post")
			h2
				i.glyphicon.glyphicon-log-in  Login
			.row
				.col-md-6
					input.form-control(name='email', type='email', placeholder='Email Address')
				.col-md-6
					input.form-control(name='password', type='password', placeholder='Password')
			.row
				.col-md-6
					button.btn.btn-primary.btn-block.btn-lg Sign In
				.col-md-6
					a.btn.btn-success.btn-block.btn-lg(href='/signup') Sign Up
			.row
				.col-md-12
					.button.btn.btn-default.btn-block.btn-lg 
						i.fa.fa-twitter  Sign in with Twitter
			.row
				.col-md-12
					.button.btn.btn-default.btn-block.btn-lg 
						i.fa.fa-facebook  Sign in with Facebook